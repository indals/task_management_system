# Flask Configuration
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=true

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# JWT Token Expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Database Configuration
# For local development (PostgreSQL)
# DATABASE_URL=postgresql://myuser:ChangeMe123%21@localhost:5432/taskmanager_dev
DATABASE_URL=postgresql://myuser:ChangeMe123%21@dev-database.c1qe2o6s6oix.ap-south-1.rds.amazonaws.com:5432/myapp?sslmode=require


# For Docker development
# DATABASE_URL=postgresql://taskmanager:taskmanager123@db:5432/taskmanager

# For production (replace with your actual database URL)
# DATABASE_URL=postgresql://user:password@host:port/database

# Database Options
SQLALCHEMY_ECHO=false

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=app/static/uploads

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@taskmanager.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_STDOUT=false

# Security Configuration
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Development/Testing Configuration
WTF_CSRF_ENABLED=false
BCRYPT_LOG_ROUNDS=12

# Rate Limiting
RATELIMIT_ENABLED=true

# AWS Configuration (if using AWS services)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-s3-bucket-name

# Production Only Settings
# FORCE_HTTPS=true
# TRUSTED_PROXIES=127.0.0.1

# Monitoring & Analytics
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id